
@{
    ViewBag.Title = "Login";
}

<div class="container">
    <table>
        @using (Html.BeginForm("SellerLogin", "Home", FormMethod.Post))
        {
            <tr>
                <td><label>User-Id</label></td>
                <td><input id="Text1" type="text" name="user" /></td>
            </tr>
            <tr>
                <td><label>Password</label></td>
                <td><input id="Text1" type="password" name="pass" /></td>
            </tr>
            <tr>
                <td><input id="Submit1" type="submit" value="submit" /></td>
            </tr>
        }
        <tr>
            <center><td colspan="2">If you don't have an Account already @Html.ActionLink("Create An New Account", "SellerRegistration", "Home")</td></center>
        </tr>
    </table>

</div>
