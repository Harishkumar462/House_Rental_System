@model IEnumerable<House_Rental_System.Models.Property_Details>
@{
    ViewBag.Title = "Home Page";
}
<head>
    <title>Login Page</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">


    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">



</head>
<div class="jumbotron" style="background-image: url('../../assets/home.jpg');background-repeat:no-repeat;width:100%;background-size:cover; margin-top:1%;">
    <h1>House Rental</h1>
    <p class="lead">The Best online website for renting your wished property</p>

</div>
<div class="container" style="margin-top:3%;">
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-sm-4">
                <div class="card">
                    @{
                        var images = item.Property_Images;
                        if (images.Count > 0)
                        {
                            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" ;">
                                <div class="carousel-inner">
                                    @{int i = 0;}
                                    @foreach (var image in images)
                                    {
                                        i++;
                                        var active = i == 1 ? "active" : "";
                                        var base64 = Convert.ToBase64String(image.Image);
                                        var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                                        <div class="carousel-item @active">
                                            <img src="@imgsrc" alt="First slide" style="border-radius: 5px; height:200px;width:100%;">
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Property_Name</h5>
                        <p class="card-text zmdi zmdi-pin">  <b>Address</b>  @item.Property_Address , @item.Property_City (@item.Property_Pin)</p>
                        <p class="card-text fa fa-bed">  <b>BHK</b>  @item.Property_Information.BHK</p><br />
                        <p class="card-text fa fa-rupee">  <b>Deposit</b>  @item.Property_Information.Expected_Deposit</p><br />
                        <p class="card-text fa fa-rupee">  <b>Rent</b>  @item.Property_Information.ExpectedRent</p><br />
                        <a href="~/Home/Login" class="btn fa fa-envelope" style="background-color: rgba(0, 171, 159, 0.73);color:white;">  Details</a>

                    </div>
                </div>
            </div>


        }
    </div>
</div>