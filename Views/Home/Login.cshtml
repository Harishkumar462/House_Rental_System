
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}

<div class="container" >
    <table style="margin-left:35%;margin-top:15%;">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            <tr>
                <td><label>User-Id</label></td>
                <td><input id="Text1" type="text" name="user" /></td>
            </tr>
            <tr>
                <td><label>Password</label></td>
                <td><input id="Text1" type="password" name="pass" /></td>
            </tr>
            <tr>
                <td><input id="Submit1" type="submit" value="submit" /></td>
            </tr>
        }
        <tr>
            <center><td colspan="2">If you don't have an Account already @Html.ActionLink("Create An New Account", "Registration", "Home")</td></center>
        </tr>
    </table>

</div>
