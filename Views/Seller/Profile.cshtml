@model House_Rental_System.Models.Seller_Details

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}

<h2>Profile</h2>

<div>
    <h4>Seller_Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Seller_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Seller_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Seller_Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Seller_Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Seller_Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Seller_Phone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Seller_state)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Seller_state)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Seller_Photo)
        </dt>

        <dd>
            @{if (ViewBag.image != null)
                {
                    var base64 = Convert.ToBase64String(ViewBag.image);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                    <img src='@imgsrc' style="height:100px;width:100px;" />
                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Seller_Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Seller_Password)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "EditProfile", new { id = Model.Seller_ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
